<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.p4r4d0x.edmgenreclassifier.fragments.StarterLoginFragment">

    <LinearLayout
        android:id="@+id/ll_body_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="50sp"
        android:paddingEnd="60sp"
        android:paddingStart="60sp"
        android:paddingTop="50sp"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/tv_starter_info_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/info_descr_text" />

    </LinearLayout>


</LinearLayout>
